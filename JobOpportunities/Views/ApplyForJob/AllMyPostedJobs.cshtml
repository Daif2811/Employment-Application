@model IEnumerable<JobOpportunities.Models.Job>

@{
    ViewBag.Title = "AllMyPostedJobs";
}

<h2>All My Posted Jobs</h2>

<p>
    @Html.ActionLink("Create New", "Create","Job")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => item.JobContent).ToString()))

        </td>
        <td>
           <img src="~/Images/Jobs/@Html.DisplayFor(modelItem => item.JobImage)" style="width:70px; height:90px" class="thumbnail"/> 
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit","Job", new { id=item.JobID } , null) |
            @Html.ActionLink("Details", "Details","job", new { id=item.JobID }, null) |
            @Html.ActionLink("Delete", "Delete","Job", new { id=item.JobID } , null)
        </td>
    </tr>
}

</table>
